
#OOPs object oriented programming concepts

#Class is a protype/blueprint, defines how something should be built.
# Object - An Instance of a class.
# 

class Person:
    #attributes
    def __init__(self,name, age, height, color,power):
        self.name = name
        self.age = age
        self.height = height
        self.color = color
        self.power = power
    #methods 
    def speak(self):
        print(f"Hi, I am {self.name} and i am {self.age} years old")
    def superpower(self):
        print(f"{self.power} is my superpower")

p1 = Person("Owen",12,152,"white","Strength")
p1.speak()
p1.superpower()
p2 = Person("Alice", 12, 157,"wheatish","Blasters")
p2.speak()
p2.superpower()
